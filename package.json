{
  "name": "multiple-package-manager",
  "description": "CLI for managing multiple node packages",
  "version": "0.0.0-development",
  "author": "Mike Donnalley",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "dependencies": {
    "@oclif/core": "^0.5.31",
    "tslib": "^2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.6.2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chai": "^4.3.4",
    "commitlint": "^13.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint": "^7.29.0",
    "husky": "^6",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "oclif": "^2.0.0-main.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.0",
    "semantic-release": "^17.4.5",
    "sinon": "^11.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/lib",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/mdonnalley/multiple-package-manager",
  "keywords": [
    "multiple package manager",
    "package manager"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "mpm",
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "mdonnalley/multiple-package-manager",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "commitlint": "commitlint",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "postpack": "rm .oclif.manifest.json",
    "posttest": "yarn run lint",
    "prepack": "rm -rf lib && tsc && oclif manifest",
    "version": "oclif readme && git add README.md",
    "test": "mocha \"test/**/*.test.ts\" -r ts-node/register --recursive --forbid-only",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"]
  }
}
